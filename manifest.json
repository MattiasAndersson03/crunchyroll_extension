{
  "manifest_version": 3,
  "name": "Hide Dub Shows",
  "version": "1.0",
  "description": "Hides Crunchyroll dub shows via popup button",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
  "https://www.crunchyroll.com/simulcastcalendar*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "crunchyroll_logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.crunchyroll.com/simulcastcalendar*"],
      "js": ["hidedub.js"]
    }
  ]
}
